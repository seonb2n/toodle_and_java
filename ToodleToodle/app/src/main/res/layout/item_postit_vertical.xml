<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_Layout"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/basic_back">

    <RelativeLayout
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/custom_postit_icon_back">

        <ImageView
            android:id="@+id/icon_Img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/title_Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="7dp"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="@color/postit_content_txt"/>

    <RelativeLayout
        android:id="@+id/basic_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/time_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="69dp"
            android:text="@string/postit_time_just"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/postit_time_txt"/>

        <RelativeLayout
            android:layout_width="57dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/postit_end_btn"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/postit_end_btn_txt"/>

            <Button
                android:id="@+id/end_Btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/end_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/postit_mask_back"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="86dp"
            android:background="@color/postit_end_strike_through"/>

        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">
            
            <ImageView
                android:src="@drawable/ic_postit_return"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="29dp"
                android:text="@string/postit_revert_btn"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/postit_revert_btn_txt"/>

            <Button
                android:id="@+id/revert_Btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>